  <node name="simple_marker" pkg="map_maker" type="nodevisualizer.py">
    <param name="tilethickness" value=".05"/>
    <param name="roadthickness" value=".025"/>
    <param name="parking_frac" value=".7"/>
    <param name="air_node_display" value="True"/>
    <param name="waypoint_node_display" value="True"/>
    <param name="buildings" value="$(arg buildings)"/>
    <param name="display_frequency" value="4"/>
  </node>
  <node name="simulator" pkg="map_maker" type="simulator.py" output="screen">
    <param name="delay" value=".01"/>
  </node>

  <param name="robot_description" command="$(find xacro)/xacro '$(find map_maker)/urdf/crazyflie2.urdf.xacro'"/>

  <param name="house1_description" command="$(find xacro)/xacro '$(find map_maker)/urdf/house1.urdf.xacro'"/>  
